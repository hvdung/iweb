<h1>Danh sách bài viết</h1>
<ul>
    <% @posts.each do |post| %>
    <li>
        <h3><%= link_to post.title, post_path(post.id) %></h3>
        <div><%= link_to "Edit", "#" %><span>|</span><%= link_to "Delete", post, method: :delete, data:{confirm: "Are you sure ?"} %></div>
    </li>
    <% end %>
</ul>