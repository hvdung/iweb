<div class="col-md-3">
  <div class="page-content-item">
    <% if post.thumbnail? %>
    <div class="post-thumb">
        <%= link_to post_path(post.id) do %>
        <%= image_tag post.thumbnail.url, class: "rounded mx-auto d-block" %>
        <% end %>
    </div>
    <% end %>
    <ul class="post-meta">
      <li>
        <span><i class="far fa-user"></i>Admin</span>
      </li>
      <li>
        <span><i class="far fa-calendar-alt"></i><%= post.created_at %></span>
      </li>
      <li>
        <span><i class="far fa-folder-open"></i><a href="#">Sport</a></span>
      </li>
    </ul>
    <h4 class="post-title"><%= link_to post.title, post_path(post.id) %></h4>
    <div class="post-desc">
      <%= post.desc %>
    </div>
    <%= link_to 'Read more', post_path(post.id), class: "read-more" %>
  </div>
</div>