<div class="col-md-4">
  <div class="page-content-item">
    <% if post.thumbnail? %>
    <div class="post-thumb">
        <%= link_to post_path(post.id) do %>
        <%= image_tag post.thumbnail.url, class: "rounded mx-auto d-block" %>
        <% end %>
    </div>
    <% end %>
    <ul class="post-meta">
      <li>
        <span><i class="far fa-user"></i><%= post.user.email %></span>
      </li>
      <li>
        <span><i class="far fa-calendar-alt"></i><%= post.created_at.strftime("%Y-%m-%d") %></span>
      </li>
    </ul>
    <h4 class="post-title"><%= link_to post.title, post_path(post.id) %></h4>
    <div class="post-desc">
      <%= post.desc %>
    </div>
    <%= link_to 'Read more', post_path(post.id), class: "read-more" %> 
    <% if user_signed_in? %>
      <% if current_user == post.user || current_user.admin? %>/
      <%= link_to 'Edit', edit_post_path(post.id), class: "read-more" %> /
      <%= link_to 'Delete', post_path(post.id), method: :delete, data:{confirm: 'Are you sure?'}, class: "read-more" %>
      <% end %>
    <% end %>
  </div>
</div>