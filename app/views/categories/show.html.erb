<% provide(:title, "Category archive") %>
<%= render "shared/heading" %>
<div class="page-content container-fluid">
  <div class="row">
    <div class="col-md-6 offset-md-3 ">
      <table class="table">
        <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title post</th>
          <th scope="col">Time to created</th>
        </tr>
        </thead>
        <tbody>
        <% @posts.each.with_index do |p, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= p.post.title %></td>
            <td><%= p.post.created_at.strftime("%Y-%m-%d") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>