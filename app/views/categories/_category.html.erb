<tr>
    <td>
        <%= category_counter + 1 %>
    </td>
    <td>
        <%= category.title %>
    </td>
    <td>
      <%= category.desc %>
    </td>
    <td>
        <ul class="cat-action">
          <li>
            <%= link_to 'Edit', edit_category_path(category.id) %>
          </li>
          <li>
            <%= link_to 'Delete', category_path(category.id), method: :delete, data:{confirm: 'Are you sure?'} %>
          </li>
        </ul>
    </td>
    <td>
        <% cat_parents = category.ancestors %>
        <% cat_parents.each do |c| %>
        <%= link_to c.title, edit_category_path(c.id), class: "href-seperator"  %>
        <% end %>
    </td>
    <td>
      13
    </td>
</tr>